%header.navbar.navbar-fixed-top.navbar-inverse
  .container.header
    = link_to t('.logo_title'), root_path, id: "logo"
    .rails_logo
      = link_to image_tag("RubyOnRails.png", alt: "Rails logo")

    %nav
      %ul.nav.navbar-nav.pull-left
        %li
          =link_to t('.home'), root_path
        %li
          =link_to t('.help'), help_path
        -#%li
        -#  =link_to 'Contacts', main_help_path
        -#%li
        -#  =link_to 'About', main_about_path
        - if signed_in?
          %li.logged
            #{current_user.email}
          = gravatar_for current_user
          %li#fat-menu.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
            %p
              = t('.person')
              %b.caret
            %ul.dropdown-menu
              %li= link_to t('.profile'), current_user
              %li= link_to t('.settings'), '#'
              %li.divider
              %li= link_to t('.sign_out'), signout_path, method: "delete"
        - else
          %li= link_to t('.sign_in'), signin_path

    %div.localization
      %p.locale
        = link_to image_tag("Russia.png", alt: "", title: "Русский"), locale: :ru
        = link_to image_tag("United_Kingdom.png", alt: "", title: "English"), locale: :en
        %b
          = I18n.locale






