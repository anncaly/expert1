.container
  -#=t('test')
  .image
    .row
      .col-md-9
        .image_display
          .row.image
            .col-md-12
              %h2.up-theme{:title => t('.theme_name')}
                #{@selected_theme}
            .col-md-12
              %h2.up{:title => "Image file name"}
                #{@selected_image_name}
            .col-md-1
              .img-left-side
                %h3{:title => "list to previous image"}
                  %i.glyphicon.glyphicon-chevron-left
            .col-md-10
              .img-center{:title => "Default image"}
                %img{:alt => "Default Image", :src => 'assets/pictures/Кубики.jpg', :title => "Default Image", :style => "width:100%; height:100%;"}
                  .image_user_value{:title => "Expert value"}
            .col-md-1
              .img-right-side
                %h3{:title => "list to next image"}
                  %i.glyphicon.glyphicon-chevron-right


      .col-md-3
        .control_panel
          .controls
            .select_theme
              = render 'work/button_theme_select', locale: @current_locale
              %br
            .results_list
              = render 'work/button_list_results'
              %br

            %span.common_value
              = t('.common_value')
              %h2.common{:title => "Common value"}
            %span.total_values
              = t('.total_values')
              %h2.total{:title => "Total values"}
          .row.diag
            .col-md-12
              .image_diag
                %h2.choose{:title => "Value scale"}
                  = t(".make_decision")
                .row
                  .col-md-1.min
                    %p.left 5%
                  .col-md-10.slider
                    #slider
                      %input#slide{:max => "100", :min => "5", :value => "50",
                                     :onchange => "updateSlider(this.value)",
                                     :step => "5", :type => "range"}
                  .col-md-1.max
                    %p.right 100%
                    %br
                  %button.button__results.save{:title => "Save image diag results"}
                    %a{"data-remote" => "true", :format => "js", :href => "#", :title => "Save image diag results"}
                      = t(".save_decision")
                  #chosen_value 50

