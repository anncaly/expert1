%p#notice= notice

.container
  .show_user
    .row
      %aside.span4
        %section
          = gravatar_for @user
          .profile_login
            %p
              = @user.name
    .profile_email
      %b= t('.email')
      = @user.email

    = link_to t('.work'), work_path, class: "btn btn-lg btn-primary"

  .profile_control
    = link_to t('.edit'), edit_user_path(@user)
    \|
    = link_to t('.user_list'), users_path
