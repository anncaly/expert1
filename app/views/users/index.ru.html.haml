.container
  %h1 Список пользователей

  %span.add_user
    = link_to t('.new_user'), new_user_path
  %br

  %table
    %thead
      %tr
        %th Имя
        %th Email
        %th
        %th
        %th

    %tbody
      - @users.each do |user|
        %tr
          %td= user.name
          %td= user.email
          %td= link_to t('.show'), user
          %td= link_to t('.edit'), edit_user_path(user)
          %td= link_to t('.destroy'), user, :method => :delete, :data => { :confirm => 'Are you sure?' }

  %br
